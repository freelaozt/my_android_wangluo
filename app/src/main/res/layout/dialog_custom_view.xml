<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="8dp"
    card_view:contentPadding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_bottom"
            android:padding="4dp">

            <TextView
                android:id="@+id/tv_custom_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="标题"
                android:textColor="@color/colorBottomNav"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <EditText
            android:id="@+id/ed_custom_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:hint="内容"
            android:maxLength="200"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:textColor="#555"
            android:textSize="17sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <Button
                android:id="@+id/btn_custom_dialog_confirm"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_marginEnd="10dp"
                android:layout_toLeftOf="@+id/btn_custom_dialog_cancel"
                android:background="@drawable/selector_btn_1"
                android:text="确定"
                android:textColor="@color/colorBottomNav"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_custom_dialog_cancel"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_margin="2dp"
                android:background="@drawable/selector_btn_1"
                android:text="取消"
                android:textColor="@color/colorBottomNav"
                android:textSize="16sp" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

